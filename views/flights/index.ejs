<%- include('../partials/header') %>
  <h1>Flights List</h1>
  <table>
    <thead>
      <tr>
        <th>Flight Number</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(flight => { %>
        <tr>
          <td class="<%= flight.departs < date ? "pastDate" : "scheduled" %> "><%= flight.flightNo %></td>
          <td><a href="/flights/<%= flight._id %> ">Details</a></td>
        </tr>
        <% }) %>
    </tbody>
  </table>
</body>
</html>